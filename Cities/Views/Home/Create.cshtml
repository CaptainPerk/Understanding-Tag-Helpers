@model City
@{ Layout = "_Layout"; }

<form method="post">
    <div class="form-group">
        <label helper-for="Name"/>
        <input helper-for="Name"/>
    </div>
    <div class="form-group">
        <label helper-for="Country"/>
        <input helper-for="Country" />
    </div>
    <div class="form-group">
        <label helper-for="Population"/>
        <input helper-for="Population" />
    </div>
    <formbutton type="submit" bg-color="danger">Add</formbutton>
    <formbutton type="reset"/>
    <a bs-button-color="secondary" asp-action="Index">Cancel</a>
</form>